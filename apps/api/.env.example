# 数据库
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/nexus_console

# Redis
REDIS_URL=redis://localhost:6379/0

# 应用
APP_NAME=Nexus Console API
APP_VERSION=0.1.0
DEBUG=True
# 生成安全的 SECRET_KEY: python -c 'import secrets; print(secrets.token_urlsafe(32))'
SECRET_KEY=your-secret-key-here-min-32-chars-change-in-production

# 日志
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# 认证（基于 httpOnly Cookie 的 JWT）
ACCESS_TOKEN_EXPIRES_MINUTES=30
REFRESH_TOKEN_EXPIRES_DAYS=7
# Cookie 设置：生产环境应使用 HTTPS，因此需要设为 COOKIE_SECURE=True
COOKIE_SECURE=False
# lax | strict | none
COOKIE_SAMESITE=lax
# 可选：Cookie 域名（例如 .example.com）。本地开发留空即可。
COOKIE_DOMAIN=

# RBAC 引导（bootstrap）
# 逗号分隔白名单：命中该列表的注册邮箱将自动授予 admin 角色
ADMIN_EMAILS=admin@example.com
